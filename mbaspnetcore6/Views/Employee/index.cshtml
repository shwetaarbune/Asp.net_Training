@model IEnumerable<Employee> 
@{
    <h1>The List of Employees</h1>
    <a asp-action="Create">Create New</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmpNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmpName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Designation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                  <th>
                    @Html.DisplayNameFor(model => model.DeptNo)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
             {
               <tr>
                   <td>
                       @emp.EmpNo
                   </td>
                   <td>
                       @emp.EmpName
                   </td>
                   <td>
                       @emp.Designation
                   </td>
                   <td>
                       @emp.Salary
                   </td>
                   <td>
                       @emp.DeptNo
                   </td>
                   <td>
                       <!--HTML Helper Method that will navigate to Edit Action Method and will pass the DeptNo as Route Parameter-->
                       @Html.ActionLink("Edit", "Edit", new { id = emp.DeptNo })
                   </td>
                   <td>
                       <!--HTML Helper Method that will navigate to Delete Action Method and will pass the DeptNo as Route Parameter-->
                       @Html.ActionLink("Delete", "Delete", new { id = emp.DeptNo })
                   </td>
               </tr>      
             }
        </tbody>
    </table>
}

